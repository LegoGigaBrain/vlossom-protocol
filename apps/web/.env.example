# Vlossom Web App Environment Variables
# Copy this file to .env.local for local development

# =============================================================================
# API Configuration
# =============================================================================
# Leave empty to run in mock/demo mode (no backend required)
NEXT_PUBLIC_API_URL=http://localhost:4000

# =============================================================================
# Network Selection
# =============================================================================
# Network mode: "testnet" | "mainnet"
NEXT_PUBLIC_NETWORK_MODE=testnet

# Chain selection: "base" | "base_sepolia" | "arbitrum" | "arbitrum_sepolia"
NEXT_PUBLIC_CHAIN=base_sepolia

# =============================================================================
# RPC URLs
# =============================================================================
# Base Networks
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_BASE_MAINNET_RPC_URL=https://mainnet.base.org

# Arbitrum Networks (optional - uses public defaults if not set)
NEXT_PUBLIC_ARB_SEPOLIA_RPC_URL=
NEXT_PUBLIC_ARB_MAINNET_RPC_URL=

# =============================================================================
# Smart Contract Addresses - Base Sepolia (deployed Dec 2024)
# =============================================================================
# These are auto-selected based on NEXT_PUBLIC_CHAIN, but can be overridden:
# NEXT_PUBLIC_ESCROW_ADDRESS=0x925E12051A6badb09D5a8a67aF9dD40ec5725E04
# NEXT_PUBLIC_USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e
# NEXT_PUBLIC_ACCOUNT_FACTORY_ADDRESS=0x1118fA7895A0b9Ae2Ed51F1BC355CFd2c606882d
# NEXT_PUBLIC_PAYMASTER_ADDRESS=0x66Af4b4c3935C185F832cf2B38A88dABA22cCD8D

# =============================================================================
# Smart Contract Addresses - Base Mainnet (when deploying to mainnet)
# =============================================================================
# NEXT_PUBLIC_BASE_ESCROW_ADDRESS=
# NEXT_PUBLIC_BASE_FACTORY_ADDRESS=
# NEXT_PUBLIC_BASE_PAYMASTER_ADDRESS=

# =============================================================================
# Smart Contract Addresses - Arbitrum (when deploying to Arbitrum)
# =============================================================================
# NEXT_PUBLIC_ARB_ESCROW_ADDRESS=
# NEXT_PUBLIC_ARB_FACTORY_ADDRESS=
# NEXT_PUBLIC_ARB_PAYMASTER_ADDRESS=

# =============================================================================
# WalletConnect (for external wallet connections)
# =============================================================================
# Get your project ID at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# =============================================================================
# Fiat On-Ramp (Transak)
# =============================================================================
NEXT_PUBLIC_TRANSAK_API_KEY=4a85d63b-0fd9-4c43-ad7b-e4fc69253d9c
NEXT_PUBLIC_TRANSAK_ENVIRONMENT=STAGING

# =============================================================================
# Monitoring & Analytics (optional)
# =============================================================================
# Sentry - Error tracking
NEXT_PUBLIC_SENTRY_DSN=

# PostHog - Product analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
