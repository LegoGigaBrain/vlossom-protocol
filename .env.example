# ===========================================
# Vlossom Protocol Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in the values

# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/vlossom"
REDIS_URL="redis://localhost:6379"

# ===========================================
# Chain Configuration
# ===========================================
# Base Mainnet
BASE_RPC_URL="https://mainnet.base.org"
# Base Sepolia (Testnet)
BASE_SEPOLIA_RPC_URL="https://sepolia.base.org"

# Chain to use: "base" | "base-sepolia" | "localhost"
CHAIN_ENV="localhost"

# ===========================================
# Smart Contracts (deployed addresses)
# ===========================================
# These will be populated after deployment
ACCOUNT_FACTORY_ADDRESS=""
BOOKING_REGISTRY_ADDRESS=""
ESCROW_ADDRESS=""
PAYMASTER_ADDRESS=""

# ===========================================
# Account Abstraction
# ===========================================
BUNDLER_RPC_URL=""
PAYMASTER_PRIVATE_KEY=""

# ===========================================
# Auth (Privy or Web3Auth)
# ===========================================
PRIVY_APP_ID=""
PRIVY_APP_SECRET=""

# ===========================================
# Payment Services
# ===========================================
# Onramp/Offramp provider credentials
ONRAMP_API_KEY=""
OFFRAMP_API_KEY=""

# ===========================================
# Notifications
# ===========================================
PUSH_NOTIFICATION_KEY=""
EMAIL_API_KEY=""
SMS_API_KEY=""

# ===========================================
# Monitoring
# ===========================================
SENTRY_DSN=""
ANALYTICS_KEY=""

# ===========================================
# Development
# ===========================================
NODE_ENV="development"
LOG_LEVEL="debug"
